<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp">

    <Button
        android:id="@+id/buttonDeletePassDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="מחיקת כרטיס"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonViewCards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="הצג כרטיס"
        app:layout_constraintEnd_toEndOf="@+id/buttonDeletePassDate"
        app:layout_constraintStart_toStartOf="@+id/buttonDeletePassDate"
        app:layout_constraintTop_toBottomOf="@+id/buttonDeletePassDate" />

    <Button
        android:id="@+id/buttonCloseWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="6dp"
        android:text="סגור חלון"
        app:layout_constraintEnd_toEndOf="@+id/buttonViewCards"
        app:layout_constraintStart_toStartOf="@+id/buttonViewCards"
        app:layout_constraintTop_toBottomOf="@+id/buttonViewCards" />
</androidx.constraintlayout.widget.ConstraintLayout>